{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "removeComments": false,
        "moduleResolution": "node",
        "noLib": false
    },
    "filesGlob": [
        "./**/*.ts",
        "!./**/*.d.ts",
        "!./node_modules/**/*",
        "!./tests/**/*",
        "!./examples/**/*"
    ],
    "files": [
        "./typings/tsd.d.ts",
        "./typings/jasmine/jasmine.d.ts",
        "./index.ts",
        "./spec/actionFactory.spec.ts",
        "./spec/helpers.spec.ts",
        "./spec/store.spec.ts",
        "./spec/todosState.ts",
        "./src/actionFactory.ts",
        "./src/debug.ts",
        "./src/helpers.ts",
        "./src/store.ts"
    ]
}
